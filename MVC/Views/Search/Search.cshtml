@model IEnumerable<BLL.Interface.Entities.PhotoEntity>

@foreach (var item in Model)
{
    <div class=" row">
        <div class="col-md-8">
            <figure>
                @Html.Raw("<img class='img-responsive' Id src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(item.Image) + "\" />")
                <figcaption>
                        @Html.ActionLink("Nice:" + item.likesNumber, "AddLike", "Album", 
                            new { id = item.Id }, new { @class = "btn btn-sm btn-default", id = "like" })
                    @item.LoadDate.ToShortDateString() |
                    @item.Description
                </figcaption>
            </figure>
            <hr />
        </div>
    </div>
    
}

